@page
@model BudgetApp.Pages.IndexModel

<h1>Dodaj wydatek</h1>
<form method="post">
    <label>Tytuł: <input asp-for="NewExpense.Title" /></label><br />
    <label>Kwota: <input asp-for="NewExpense.Amount" type="number" step="0.01" /></label><br />
    <label>Data: <input asp-for="NewExpense.Date" type="date" /></label><br />
    <button type="submit">Dodaj</button>
</form>

<h2>Lista wydatków</h2>
<ul>
    @foreach (var e in IndexModel.Expenses) {
        <li>@e.Date.ToShortDateString(): @e.Title – @e.Amount zł</li>
    }
</ul>
